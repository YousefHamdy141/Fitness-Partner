{{! backend/src/auth/mail/templates/order-confirmation.hbs }}
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
  <h2 style="color: #2c3e50;">Order Confirmation #{{order.id}}</h2>
  
  <div style="margin-bottom: 20px;">
    <p style="margin: 5px 0;">
      <strong>Date:</strong> 
      {{formatDate order.date}}
    </p>
  </div>

  <h3 style="color: #34495e; border-bottom: 2px solid #ecf0f1; padding-bottom: 5px;">
    Products:
  </h3>
  
  <ul style="list-style: none; padding: 0;">
    {{#each order.products}}
    <li style="padding: 10px 0; border-bottom: 1px solid #ecf0f1;">
      <div style="display: flex; justify-content: space-between;">
        <div>
          <strong>{{this.name}}</strong>
          {{#if this.flavor}}
            <div style="color: #7f8c8d; font-size: 0.9em;">
              Flavor: {{this.flavor}}
            </div>
          {{/if}}
        </div>
        <div>
          <span style="margin-right: 20px;">Qty: {{this.quantity}}</span>
          <span>${{this.price}}</span>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

  <div style="text-align: right; margin: 20px 0;">
    <h3 style="color: #34495e;">
      Total: ${{order.total}}
    </h3>
  </div>

  <div style="background-color: #f8f9fa; padding: 15px; border-radius: 5px;">
    <h3 style="color: #34495e; margin-top: 0;">
      Shipping Address:
    </h3>
    <p style="margin: 5px 0;">{{order.address.street}}</p>
    <p style="margin: 5px 0;">
      {{order.address.city}}, {{order.address.state}} {{order.address.zipCode}}
    </p>
    {{#if order.address.country}}
    <p style="margin: 5px 0;">{{order.address.country}}</p>
    {{/if}}
  </div>

  <div style="margin-top: 25px; text-align: center; color: #7f8c8d;">
    <p>Thank you for shopping with Fitness Partner!</p>
  </div>
</div>